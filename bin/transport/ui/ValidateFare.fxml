<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx" 
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="transport.control.ValidateController"
            stylesheets="@style.css"
            styleClass="borderpane-validate">

    <center>
        <VBox spacing="10" styleClass="vbox-validate">
            <TextField fx:id="fareIdField" promptText="Enter Fare ID" styleClass="textfield-adduser"/>
            <Button fx:id="validateButton" text="Validate" onAction="#handleValidate"/>
            <Label fx:id="resultLabel"/>
        </VBox>
    </center>

    <bottom>
        <Button fx:id="backButton" text="Back" onAction="#handleBack"/>
    </bottom>

</BorderPane>