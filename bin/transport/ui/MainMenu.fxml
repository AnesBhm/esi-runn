<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx" 
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="transport.control.MainController"
      spacing="10" 
      style="-fx-padding: 20; -fx-background-color: #f0f0f0;">

    <Button text="Add User" 
            onAction="#handleAddUser"
            style="-fx-font-size: 14; -fx-pref-width: 200;"/>

    <Button text="Purchase Fare Medium" 
            onAction="#handlePurchaseFare"
            style="-fx-font-size: 14; -fx-pref-width: 200;"/>

    <Button text="Validate Fare" 
            onAction="#handleValidateFare"
            style="-fx-font-size: 14; -fx-pref-width: 200;"/>

    <Button text="Manage Complaints (Bonus)" 
            onAction="#handleComplaints"
            style="-fx-font-size: 14; -fx-pref-width: 200;"/>

</VBox>